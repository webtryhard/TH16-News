<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" style="display: flex;justify-content: space-between;">
                        <strong class="card-title">Danh sách bài viết</strong>
                    </div>
                    <div class="card-body">
                        <div id="bootstrap-data-table-export_wrapper"
                            class="dataTables_wrapper dt-bootstrap4 no-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="bootstrap-data-table-export"
                                        class="table table-striped table-bordered dataTable no-footer" role="grid"
                                        aria-describedby="bootstrap-data-table-export_info">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting_asc" tabindex="0"
                                                    aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1"
                                                    aria-sort="ascending"
                                                    aria-label="Name: activate to sort column descending"
                                                    style="width: 100px;">Mã số</th>
                                                <th class="sorting" tabindex="0"
                                                    aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1"
                                                    aria-label="Position: activate to sort column ascending"
                                                    style="width: 407px;">Tiêu đề</th>
                                                <th class="sorting" tabindex="0"
                                                    aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1"
                                                    aria-label="Position: activate to sort column ascending"
                                                    style="width: 407px;">Nội dung tóm tắt</th>
                                                <th class="sorting" tabindex="0"
                                                    aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1"
                                                    aria-label="Position: activate to sort column ascending"
                                                    style="width: 407px;">Lượt xem</th>
                                                <th class="sorting" tabindex="0"
                                                    aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1"
                                                    aria-label="Office: activate to sort column ascending"
                                                    style="width: 183px;">Trạng thái bài viết</th>
                                                <th data-orderable="false" style="width: 183px;">
                                                    Ảnh bài viết
                                                </th>
                                                <th data-orderable="false" style="text-align: center">
                                                    <a class="btn btn-outline-success"
                                                        href="/writer/{{this.writer.User_ID}}/add" role="button">
                                                        <i class="fa fa-plus" aria-hidden="true">
                                                            Đăng bài
                                                        </i>
                                                    </a>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each this.news}}
                                            <tr>
                                                <th scope="row">{{News_ID}}</th>
                                                <td>{{News_Name}}</td>
                                                <td>{{Summary}}</td>
                                                <td>{{Views}}</td>
                                                <td>{{State_Name}}</td>
                                                <td>
                                                    <img src={{Image_Avatar}} style="max-width:50px;max-height:50px"
                                                        class="avatar img-circle" />
                                                </td>
                                                <td>
                                                    <a class="btn btn-primary btn-sm"
                                                        href="/writer/{{../this.writer.User_ID}}/detail/{{News_ID}}"
                                                        title="Xem bài viết" role="button">
                                                        <i class="fa fa-eye" aria-hidden="true">
                                                        </i>
                                                    </a>

                                                    {{#compare State_ID "<" 3}}
                                                    <a class="btn btn-success btn-sm"
                                                        href="/writer/{{../this.writer.User_ID}}/edit/{{News_ID}}" role="button"
                                                        title="Chỉnh sửa">
                                                        <i class="fa fa-edit" aria-hidden="true">
                                                        </i>
                                                    </a>
                                                    {{/compare}}
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div>