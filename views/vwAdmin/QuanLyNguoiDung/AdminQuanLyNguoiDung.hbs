<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" style="display: flex;justify-content: space-between;">
                        <strong class="card-title">Danh sách người dùng</strong>
                        <a class="btn btn-outline-danger" href="/admin/quanlynguoidung/deleted" role="button">
                            <i class="fa fa-minus-square"> Những mục đã xóa</i>
                        </a>
                    </div>
                    <div class="card-body">
                        <div id="bootstrap-data-table-export_wrapper"
                            class="dataTables_wrapper dt-bootstrap4 no-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="bootstrap-data-table-export"
                                        class="table table-striped table-bordered dataTable no-footer" role="grid"
                                        aria-describedby="bootstrap-data-table-export_info">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting_asc" tabindex="0"
                                                    aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1"
                                                    aria-sort="ascending"
                                                    aria-label="Name: activate to sort column descending"
                                                    style="width: 100px;">Mã số</th>
                                                <th class="sorting" tabindex="0"
                                                    aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1"
                                                    aria-label="Position: activate to sort column ascending"
                                                    style="width: 407px;">Username</th>
                                                <th class="sorting" tabindex="0"
                                                    aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1"
                                                    aria-label="Position: activate to sort column ascending"
                                                    style="width: 407px;">Tên</th>
                                                <th class="sorting" tabindex="0"
                                                    aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1"
                                                    aria-label="Position: activate to sort column ascending"
                                                    style="width: 370px;">Số điện thoại</th>
                                                <th class="sorting" tabindex="0"
                                                    aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1"
                                                    aria-label="Office: activate to sort column ascending"
                                                    style="width: 183px;">Loại User</th>
                                                <th data-orderable="false" style="width: 183px;">
                                                    Avatar
                                                </th>
                                                <th data-orderable="false" style="text-align: center">
                                                    <a class="btn btn-outline-success" href="quanlynguoidung/add"
                                                        role="button">
                                                        <i class="fa fa-plus" aria-hidden="true">
                                                            Thêm mới
                                                        </i>
                                                    </a>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each this.user}}
                                            <tr>
                                                <th scope="row">{{User_ID}}</th>
                                                <td>{{Username}}</td>
                                                <td>{{Name}}</td>
                                                <td>{{Phone}}</td>
                                                <td>{{User_Cat_Name}}</td>
                                                <td>
                                                    <img src={{Avatar}} style="max-width:50px;max-height:50px"
                                                        class="avatar img-circle" />
                                                </td>
                                                <td>
                                                    <a class="btn btn-primary btn-sm" href="quanlynguoidung/edit/{{ID}}"
                                                        title="Chỉnh sửa" role="button">
                                                        <i class="fa fa-pencil" aria-hidden="true">
                                                        </i>
                                                    </a>

                                                    <a class="btn btn-danger btn-sm"
                                                        href="quanlynguoidung/delete/{{ID}}" role="button" title="Xóa">
                                                        <i class="fa fa-trash" aria-hidden="true">
                                                        </i>
                                                    </a>

                                                    {{!-- Nếu người dùng là độc giả (Subcriber) --}}
                                                    {{#compare User_Cat_Name "===" "Subcriber"}}
                                                    <a class="btn btn-warning btn-sm"
                                                        href="quanlynguoidung/delete/{{ID}}" role="button" title="Gia hạn tài khoản">
                                                        <i class="fa fa-level-up" aria-hidden="true">
                                                        </i>
                                                    </a>
                                                    {{/compare}}

                                                    {{!-- Nếu người dùng là biên tập viên (Editor) --}}
                                                     {{#compare User_Cat_Name "===" "Editor"}}
                                                    <a class="btn btn-success btn-sm"
                                                        href="quanlynguoidung/delete/{{ID}}" role="button" title="Phân công chuyên mục">
                                                        <i class="fa fa-magic" aria-hidden="true">
                                                        </i>
                                                    </a>
                                                    {{/compare}}
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div>