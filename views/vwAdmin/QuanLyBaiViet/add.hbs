<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">
            <div class="col-md-12">
                <form method="POST">
                    <div class="form-group">
                        <label for="txtName">Tiêu đề</label>
                        <input type="text" class="form-control" id="txtName" name="News_Name" autofocus required>
                    </div>
                    <div class="form-group">
                        <label for="txtName">Nội dung tóm tắt</label>
                        <input type="text" class="form-control" id="txtName" name="Summary" autofocus required>
                    </div>
                    <div class="form-group">
                        <label for="txtName">Nội dung bài viết</label>
                        <textarea type="text" class="form-control" id="txtFullDes" name="Content"></textarea>
                    </div>
                    <div class="form-group">
                        <label for="txtName">Chuyên mục</label>
                        <select class="form-control" name="CatID">
                            {{#each cat}}
                            <option value="{{ID}}">{{TenCM}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="image_uploads">Ảnh bài viết</label>
                        <input type="text" class="form-control" id="txtName" name="Image_Avatar" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="txtName">Ngày được viết</label>
                        <input required type="date" class="form-control" name="Time" />
                    </div>
                    <div class="form-group">
                        <label for="txtCatParentName">Trạng thái bài viết</label>
                        <select class="form-control" name="State_ID">
                            {{#each newState}}
                            <option value="{{State_ID}}">{{State_Name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="txtCatParentName">Người viết</label>
                        <select class="form-control" name="Writer_ID">
                            {{#each user}}
                            <option value="{{User_ID}}">{{User_ID}}_{{Username}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        <a class="btn btn-primary" href="/admin/{{this.admin.User_ID}}/quanlybaiviet" role="button">
                            <i class="fa fa-backward" aria-hidden="true"></i>
                            Quay lại danh sách
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-check" aria-hidden="true"></i>
                            Lưu lại
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div><!-- .animated -->
</div>