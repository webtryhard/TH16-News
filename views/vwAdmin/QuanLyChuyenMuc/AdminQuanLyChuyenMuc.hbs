<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" style="display: flex;justify-content: space-between;">
                        <strong class="card-title">Danh sách chuyên mục</strong>
                        <a class="btn btn-outline-danger" href="/admin/quanlychuyenmuc/deleted" role="button">
                            <i class="fa fa-minus-square"> Những mục đã xóa</i>
                        </a>
                    </div>
                    <div class="card-body">
                        <div id="bootstrap-data-table-export_wrapper"
                            class="dataTables_wrapper dt-bootstrap4 no-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="bootstrap-data-table-export"
                                        class="table table-striped table-bordered dataTable no-footer" role="grid"
                                        aria-describedby="bootstrap-data-table-export_info">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting_asc" tabindex="0"
                                                    aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1"
                                                    aria-sort="ascending"
                                                    aria-label="Name: activate to sort column descending"
                                                    style="width: 247px;">Mã số</th>
                                                <th class="sorting" tabindex="0"
                                                    aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1"
                                                    aria-label="Position: activate to sort column ascending"
                                                    style="width: 407px;">Tên chuyên mục</th>
                                                <th class="sorting" tabindex="0"
                                                    aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1"
                                                    aria-label="Office: activate to sort column ascending"
                                                    style="width: 183px;">Chuyên mục cha</th>
                                                <th data-orderable="false" style="text-align: center">
                                                    <a class="btn btn-outline-success" href="quanlychuyenmuc/add"
                                                        role="button">
                                                        <i class="fa fa-plus" aria-hidden="true">
                                                            Thêm mới
                                                        </i>
                                                    </a>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each this.cat}}
                                            {{#if IDCha}}
                                            <tr role="row" class="odd">
                                                <th class="sorting_1">{{ID}}</th>
                                                <td>{{TenCM}}</td>
                                                <td>{{TenCMCha}}</td>
                                                <td style="text-align: center">
                                                    <a class="btn btn-primary btn-sm" href="quanlychuyenmuc/edit/{{ID}}"
                                                        role="button" title="Chỉnh sửa">
                                                        <i class="fa fa-pencil" aria-hidden="true">
                                                        </i>
                                                    </a>
                                                    <a class="btn btn-danger btn-sm"
                                                        href="quanlychuyenmuc/delete/{{ID}}" role="button" title="Xóa">
                                                        <i class="fa fa-trash" aria-hidden="true">
                                                        </i>
                                                    </a>
                                                </td>

                                            </tr>
                                            {{else}}
                                            <tr>
                                                <th scope="row">{{ID}}</th>
                                                <td>{{TenCM}}</td>
                                                <td>NULL</td>
                                                <td style="text-align: center">
                                                    <a class="btn btn-primary btn-sm" href="quanlychuyenmuc/edit/{{ID}}"
                                                        role="button" title="Chỉnh sửa">
                                                        <i class="fa fa-pencil" aria-hidden="true">
                                                        </i>
                                                    </a>

                                                    <a class="btn btn-danger btn-sm"
                                                        href="quanlychuyenmuc/delete/{{ID}}" role="button" title="Xóa">
                                                        <i class="fa fa-trash" aria-hidden="true">
                                                        </i>
                                                    </a>
                                                </td>
                                            </tr>
                                            {{/if}}
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div>