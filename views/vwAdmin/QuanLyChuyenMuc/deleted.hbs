<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card shadow">
                    <h4 class="card-header">
                        Danh sách chuyên mục đã bị xóa
                    </h4>
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">ID</th>
                                <th scope="col">Tên chuyên mục</th>
                                <th scope="col">Chuyên mục cha</th>
                                <th scope="col">
                                    <a class="btn btn-primary" href="/admin/quanlychuyenmuc" role="button">
                                        <i class="fa fa-backward" aria-hidden="true"></i>
                                        Quay lại
                                    </a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each this.cat}}
                            {{#if IDCha}}
                            <tr>
                                <th scope="row">{{ID}}</th>
                                <td>{{TenCM}}</td>
                                <td>{{TenCMCha}}</td>
                                <td>
                                    <a class="btn btn-success btn-sm" href="/admin/quanlychuyenmuc/restore/{{ID}}"
                                        role="button">
                                        <i class="fa fa-plus-circle" aria-hidden="true">
                                        </i>
                                    </a>
                                </td>

                            </tr>
                            {{else}}
                            <tr>
                                <th scope="row">{{ID}}</th>
                                <td>{{TenCM}}</td>
                                <td>NULL</td>
                                <td>
                                    <a class="btn btn-success btn-sm" href="/admin/quanlychuyenmuc/restore/{{ID}}"
                                        role="button">
                                        <i class="fa fa-plus-circle" aria-hidden="true">
                                        </i>
                                    </a>
                                </td>

                            </tr>
                            {{/if}}
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div><!-- .animated -->
</div>