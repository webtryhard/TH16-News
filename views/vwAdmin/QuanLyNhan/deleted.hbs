<div class="content mt-3">
    <div class="animated fadeIn">
        <div class="row">

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header" style="display: flex;justify-content: space-between;">
                        <strong class="card-title">Danh sách nhãn đã bị xóa</strong>
                    </div>
                    <div class="card-body">
                        <div id="bootstrap-data-table-export_wrapper"
                            class="dataTables_wrapper dt-bootstrap4 no-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table id="bootstrap-data-table-export"
                                        class="table table-striped table-bordered dataTable no-footer" role="grid"
                                        aria-describedby="bootstrap-data-table-export_info">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting_asc" tabindex="0"
                                                    aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1"
                                                    aria-sort="ascending"
                                                    aria-label="Name: activate to sort column descending"
                                                    style="width: 247px;">Mã số</th>
                                                <th class="sorting" tabindex="0"
                                                    aria-controls="bootstrap-data-table-export" rowspan="1" colspan="1"
                                                    aria-label="Position: activate to sort column ascending"
                                                    style="width: 407px;">Tên nhãn</th>
                                                <th data-orderable="false">
                                                    <a class="btn btn-primary" href="/admin/quanlynhan"
                                                        role="button">
                                                        <i class="fa fa-backward" aria-hidden="true"></i>
                                                        Quay lại
                                                    </a>
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each this.tag}}
                                            <tr>
                                                <th scope="row">{{TagID}}</th>
                                                <td>{{Tag_Name}}</td>
                                                <td style="text-align: center">
                                                    <a class="btn btn-success btn-sm"
                                                        href="/admin/quanlynhan/restore/{{TagID}}" role="button" title="Khôi phục">
                                                        <i class="fa fa-plus-circle" aria-hidden="true">
                                                        </i>
                                                    </a>
                                                </td>
                                            </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- .animated -->
</div>