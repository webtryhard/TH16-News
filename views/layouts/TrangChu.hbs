  <div  class = "logo">
    <div class="container">
    <a href="/">
      <img class="logo" src="/img/{{logo}}" alt="logo">
    </a>
    </div>
  </div>
  <!-- END: logo -->
<!-- BEGIN:navbar menu -->
  <div class="menu">
    <nav class="navbar navbar-default sticky-top" role="navigation">
      <div class="container">
        <div class="item_nav">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div class="collapse navbar-collapse navbar-ex1-collapse">
            <div class="left-menu">
              <ul class="nav navbar-nav navbar-justified">
                <!--  menu-->
                {{#each this.menu}}
                <li class="font-bold">
                  <a class="dropdown-toggle" href="/list/{{parent.CatID}}">
                    {{parent.CatName}}
                  </a>
                  <ul class="dropdown-menu">
                    {{#each childs}}
                    <li class="">
                      <a href="/list/{{CatID}}" data-color="#d9534f" class="cat_c">{{CatName}}</a>
                    </li>
                    {{/each}}
                  </ul>
                </li>
                {{/each}}               
              </ul>
            </div>

            <div class="right-menu">
              <ul class="nav navbar-nav navbar-justified">
                <!-- icon login  -->
                <li class="login_icon">
                  <a href="#" data-toggle="modal" data-target="#loginModal">
                    <i class="fa fa-user-circle" aria-hidden="true"></i>
                  </a>
                </li>
                <!-- icon search  -->
                <li class="search_ hidden-xs hidden-sm">
                  <a href="#" class="color_fff " id="toggle-search">
                    <i class="fa fa-search" aria-hidden="true"></i>
                  </a>

                </li>
                <div class="div_search sr_none" style="height: 60px;margin-top: 1px">
                  <form method="get" action="#" class="formsearch hidden-xs hidden-sm" id="search-form">
                    <div class="search_fm">
                      <input type="search" class="form-control" id="ip_search" name="key" placeholder="Tìm kiếm" value="">
                      <button type="submit" class="btn btn-primary"><i class="fa fa-search"
                          aria-hidden="true"></i></button>
                    </div>
                  </form>
                </div>
              </ul>
            </div>
          </div>
          <div class="claerfix"></div>
        </div>
      </div>
    </nav>
  </div>
    <!-- END:navbar menu -->

